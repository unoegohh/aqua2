{% extends "UnoegohhShopBundle:Default:index.html.twig" %}

{% block main %}

    <header class="page-header">
        <div class="container">
            <h1 class="title">Обратная связь</h1>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="content col-sm-12 col-md-12">
                <div class="row">
                    <div class="col-sm-6 col-md-6 bottom-padding">
                        <div class="row">
                            <img style="border-radius:5px;" src="http://www.partylite.co.uk/uploads/pics/fh12_contact_01.jpg" alt=""/>
                            <br/>
                            <br/>
                            <address class="col-sm-6 col-md-6">
                                <div class="title">Телефон</div>
                                <div>

                                    {% for phone in pref().phone | split(',') %}
                                        {{ phone }} <br/>
                                    {% endfor %}
                                </div>
                            </address>
                            <address class="col-sm-6 col-md-6">
                                <div class="title">Почта</div>
                                <div>
                                    {% for email in pref().email | split(',') %}
                                        <a href="mailto:{{ email }}">{{ email }}</a> <br/>
                                    {% endfor %}
                                </div>
                            </address>
                        </div>
                        <hr>
                        {{ pref().contactsText | nl2br }}
                    </div>
                    <div class="col-sm-6 col-md-6 bottom-padding">
                        <form class="form-box register-form contact-form" method="POST" action="?">
                            <h3 class="title">Обратная связь</h3>
                            <div id="success"></div>
                            {{ form_errors(form) }}
                            {{ form_row(form._token) }}
                            <label>ФИО: <span class="required">*</span></label>
                            {{ form_widget(form.name, {'attr' :{'class' : 'form-control'}}) }}
                            <label>Email: <span class="required">*</span></label>
                            {{ form_widget(form.email, {'attr' :{'class' : 'form-control'}}) }}
                            <label>Телефон:</label>
                            {{ form_widget(form.phone, {'attr' :{'class' : 'form-control'}}) }}
                            <label>Сообщение:</label>
                            {{ form_widget(form.description, {'attr' :{'class' : 'form-control'}}) }}
                            <div class="clearfix"></div>
                            <div class="buttons-box clearfix">
                                <button id="submit" class="btn btn-default">Отправить</button>
                            </div><!-- .buttons-box -->
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}